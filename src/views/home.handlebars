<main>
    <div class="container"  >
        <div style="position: relative; height: 50px;">
            <a href="/login" style="display: inline-block; margin-top: 10px; " class="btn btn-success">
                Iniciar sesion
            </a>
       </div>
       <hr/>
       <h2 class="text-center ">Productos</h2> 
       <div class="container">
            <div class="row d-flex justify-content-center flex-wrap">
                {{#each productos}}
                <div class="mb-4" style="width: 230px;">
                    <div class="card rounded-0 h-100">
                        <h5 class="card-header text-center">{{this.title}}</h5>
                        <div class="card-body">
                            <p class="card-text" style="font-size: 12px;"><strong>Descripci√≥n:</strong> {{this.description}}</p>
                            <p class="card-text" style="font-size: 12px;"><strong>Precio:</strong> {{this.price}}</p>
                            <p class="card-text" style="font-size: 12px;"><strong>Stock:</strong> {{this.stock}}</p>
                            <p class="card-text" style="font-size: 12px;"><strong>Categoria:</strong> {{this.category}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <center >
            {{#if hasPrevPage}}
                <a href="/products?nropage={{prevPage}}" class="btn btn-secondary">Anterior</a>
            {{/if}}
            <label>{{page}}</label>
            {{#if hasNextPage}}
                <a href="/products?nropage={{nextPage}}" class="btn btn-secondary">Siguente</a>
            {{/if}}
        </center>
    </div>
</main>
